@model LeNgocHaiMVC.Models.SystemAccount

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SystemAccount</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountRole)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountRole)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountPassword)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountPassword)
        </dd>
    </dl>

    <form asp-action="Delete" id="deleteForm">
        <input type="hidden" asp-for="AccountId" />
        <button type="button" class="btn btn-danger" onclick="confirmDelete()">Delete</button>
        |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<script>
    function confirmDelete() {
        if (confirm("Are you sure you want to delete this account?")) {
            document.getElementById("deleteForm").submit();
        }
    }
</script>

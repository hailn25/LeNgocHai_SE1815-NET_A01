@model LeNgocHaiMVC.Models.SystemAccount

@{
    ViewData["Title"] = "Edit Profile";
}

<h2>Edit Profile</h2>

<form asp-action="EditProfile" method="post">
    <input type="hidden" asp-for="AccountId" />
    <input type="hidden" asp-for="AccountRole" />

    <div class="form-group">
        <label asp-for="AccountName"></label>
        <input asp-for="AccountName" class="form-control" />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccountEmail"></label>
        <input asp-for="AccountEmail" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="AccountPassword"></label>
        <input type="password" asp-for="AccountPassword" class="form-control" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
    <label>Role</label>
    <input type="text" class="form-control" value="@GetRoleName(Model.AccountRole)" disabled />
</div>


    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
@functions {
    public string GetRoleName(int? role)
    {
        return role switch
        {
            1 => "Staff",
            2 => "Lecturer",
            0 => "Admin",
            3 => "Customer",
            _ => "Unknown"
        };
    }
}
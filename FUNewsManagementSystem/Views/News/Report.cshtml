@model IEnumerable<LeNgocHaiMVC.Models.NewsArticle>

@{
	ViewData["Title"] = "Reports";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">News Reports</h1>

<!-- Form chọn ngày -->
<form method="post" class="report-form">
	<div class="row">
		<div class="col-md-4">
			<label for="startDate">Start Date:</label>
			<input type="date" name="startDate" class="form-control" required />
		</div>
		<div class="col-md-4">
			<label for="endDate">End Date:</label>
			<input type="date" name="endDate" class="form-control" required />
		</div>
		<div class="col-md-4 d-flex align-items-end">
			<button type="submit" class="btn btn-primary">Generate Report</button>
		</div>
	</div>
</form>

<hr>

<!-- Hiển thị bảng báo cáo -->
@if (Model != null && Model.Any())
{
			<table class="table table-bordered table-hover">
				<thead class="thead-dark">
					<tr>
						<th>Title</th>
						<th>Created Date</th>
					</tr>
				</thead>
				<tbody>
			@foreach (var news in Model)
			{
								<tr>
									<td>@news.NewsTitle</td>
									<td>@news.CreatedDate?.ToString("yyyy-MM-dd HH:mm")</td>
								</tr>
			}
				</tbody>
			</table>
}
else
{
			<p class="no-data">Không có dữ liệu trong khoảng thời gian này.</p>
}

<style>
	/* Tiêu đề trang */
	.page-title {
		color: #007bff;
		font-size: 28px;
		margin-bottom: 20px;
	}

	/* Form chọn ngày */
	.report-form {
		background: #f8f9fa;
		padding: 15px;
		border-radius: 10px;
		margin-bottom: 20px;
		box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
	}

	/* Cải thiện bảng */
	.table {
		width: 100%;
		border-collapse: collapse;
		box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
	}

	.thead-dark th {
		background-color: #343a40;
		color: white;
		text-align: center;
		padding: 12px;
		font-size: 16px;
	}

	.table td {
		padding: 10px;
		text-align: center;
		border-bottom: 1px solid #ddd;
		font-size: 14px;
	}

	/* Hiệu ứng hover */
	.table-hover tbody tr:hover {
		background-color: #f8f9fa;
		transition: 0.3s ease-in-out;
	}

	/* Hiển thị nếu không có dữ liệu */
	.no-data {
		color: red;
		font-size: 18px;
		font-weight: bold;
		text-align: center;
		margin-top: 20px;
	}
</style>